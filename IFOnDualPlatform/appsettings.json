{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Information"
		},
		"WriteTo": [
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "File",
							"Args": {
								"path": "${basedir}/logs/log.txt",
								"rollingInterval": "Day",
								"retainedFileCountLimit": 7,
								"buffered": true
							}
						}
					]
				}
			}
		]
	}
}
